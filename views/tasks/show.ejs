<%- include('../partials/header') %>


<table id="list">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Due</th>
        <th>Priority</th>
      </tr>
    </thead>
    <tbody>
        <tr class= <%= project.priority %> >
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.due %></td>
          <td><%= task.priority %></td>
          <td><a href="/projects/<%=project.id%>/tasks/<%=task.id%>/edit">Edit this task</a></td>
          <td><form id="task-delete-form" action="/projects/<%=project._id%>/tasks/<%=task._id%>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Task">
          </form></td>
        </tr>
      </tbody>
    </table>


<%- include('../partials/footer') %>