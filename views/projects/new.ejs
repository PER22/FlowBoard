<%- include('../partials/header') %>
<div id="new-project-form-container">
  <form id="new-form" action="/projects" method="POST">
    <label>Title:</label>
    <input type="text" name="title"><br>

    <label>Description:</label>
    <textarea name="description"></textarea><br>

    <label>Start Date:</label>
    <input type="datetime-local" name="startDate"><br>

    <label>Due Date:</label>
    <input type="datetime-local" name="dueDate"><br>

    <label>Priority</label>
    <select name="priority">
      <option value="P1">P1</option>
      <option value="P2">P2</option>
      <option value="P3">P3</option>
      <option value="P4">P4</option>
      <option value="P5">P5</option>
    </select><br>

    <label>Invite Team Members:</label>
    <input type="email" name="invitation-email-address"><br>

    <input type="submit" value="Create Project">


  </form>
</div>
<%- include('../partials/footer') %>
